<div class="container">
<h2>Edit Your Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %>
  <%= f.text_field :first_name, autofocus: true %></div>

  <div><%= f.label :last_name %>
  <%= f.text_field :last_name, autofocus: true %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email, autofocus: true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :track %>
  <%= f.select :track, [['Product and Design','Product and Design'],['Sales','Sales'],['Technical Marketing','Technical Marketing'],['Web Development','Web Development'],] %>

  <div><%= f.label :photo %>
  <%= f.file_field :photo, :class => 'file_field' %>

  <p></p>
  <p></p>


  <div><%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "off" %></div>

  <div><%= f.label :new_password %> 
    <%= f.password_field :password, :placeholder => "Leave blank if not changing", autocomplete: "off" %></div>

  <div><%= f.label :new_password_confirmation %>
    <%= f.password_field :password_confirmation, :placeholder => "Leave blank if not changing", autocomplete: "off" %></div>
  <p></p>

  <div><%= f.submit "Update" %></div>
  <div><%= link_to "Home", users_path %></div>
<% end %>

</div>
