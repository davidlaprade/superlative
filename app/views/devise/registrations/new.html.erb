<div class="container">
<h2>Sign up</h2>
<h5>Hint: all fields required</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %></div>

  <div><%= f.text_field :last_name, autofocus: true, placeholder: "Last Name"%></div>

  <div><%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>

  <div><%= f.label :track %>
  <%= f.select :track, [['Product and Design','Product and Design'],['Sales','Sales'],['Technical Marketing','Technical Marketing'],['Web Development','Web Development'],] %>

  <div><%= f.label :photo %>
  <%= f.file_field :photo, :class => 'file_field' %>

  <p></p>

  <div><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>

  <div><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password (confirm)" %></div>

  <p></p>

  <div><%= f.text_field :access_code, autocomplete: "off", placeholder: "Access code" %></div>

  <p></p>

  <div>
    <%= f.submit "Sign up", :class => "btn btn-primary" %> 
    <a href=<%= users_path %> class="btn" role="button"><i class="icon-home"></i> Home</a>
    <a href=<%= new_user_session_path %> class="btn" role="button"><i class="icon-user"></i> Sign in</a>
  </div>

<% end %>

</div>
